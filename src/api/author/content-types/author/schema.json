{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Autores",
    "description": "Create authors for your content"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "email": {
      "type": "string",
      "required": true
    },
    "noticias": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::new.new",
      "mappedBy": "autor"
    },
    "juridico": {
      "type": "uid",
      "required": true
    }
  }
}
